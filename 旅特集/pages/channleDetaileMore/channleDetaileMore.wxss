/* pages/detail/detail.wxss */
.container {
    padding: 20rpx;
  }
  
  .title {
    font-size: 45rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .info {
    font-size: 30rpx;
    color: #999;
    margin-bottom: 10rpx;
  }
  
  .source, .date {
    display: inline-block;
    margin-right: 10rpx;
  }
  
  .cover {
    width: 100%;
    height: 200rpx;
    object-fit: cover;
    margin-bottom: 20rpx;
  }
  
  .content {
    margin-top: 50rpx;
    font-size: 40rpx;
    line-height: 1.3;
    color: #333;
    font-weight: 400;
  }
  