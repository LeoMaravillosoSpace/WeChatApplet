.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
  font-family: 'Helvetica Neue', Arial, sans-serif;
}

.header-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.logo {
  margin-bottom: 30px;
}

.logo-img {
  width: 100px;
  height: 100px;
}

.login-form {
  background-color: #fff;
  border-radius: 10px;
  padding: 30px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.form-item {
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.input-icon {
  position: absolute;
  left: 10px;
  top: 50%;
  transform: translateY(-50%);
  width: 20px;
  height: 20px;
}

.input {
  width: 100%;
  height: 50px;
  padding-left: 40px;
  border: none;
  border-bottom: 1px solid #ccc;
  font-size: 16px;
  color: #333;
  background-color: #f5f5f5;
  transition: all 0.3s ease-in-out;
}

.input:focus {
  outline: none;
  border-bottom: 2px solid #007aff;
  background-color: #fff;
}

.btn {
  width: 100%;
  height: 42px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  
}

.btn:hover {
  background-color: #0062cc;
}

.tips {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
  font-size: 14px;
  color: #333;
}

.forget {
  color: #007aff;
}

.register {
  color: #007aff;
}

.wx-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 58%;
  height: 50px;
  margin-top: 20px;
  border-radius: 5px;
  background-color: #1aad19;
  color: #fff;
  font-size: 16px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
}

.wx-login-btn:hover {
  background-color: #0f8b12;
  width: 50px;
}

.wx-login-icon {
  width: 24px;
  height: 24px;
  margin-right: 10px;
}

